
page{
  background-color:#f5f5f5;
  }
.nav{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  background-color: #ffffff;
  }
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#3A3A3A;
  font-size:30rpx;
  }
.select{
  line-height:100rpx;
  text-align:center;
  color:#00aaee;
  flex:1;
  border-bottom:4rpx solid #00AAEE;
  font-size:30rpx;
}
.hidden{
  display:none;
  text-align:center;
  line-height:200rpx;
  }
.weui-cells{
  margin-top: 24rpx;
}
.weui-cell{
  padding: 10rpx 24rpx
}
.sli-title{
  font-size: 30rpx;
  color: #3a3a3a;
}
.sli-content{
  text-align:right;
  font-size: 28rpx;
  color:#8d8d8d;
}
.sli-unit{
  line-height:5rpx;
  margin-left:16rpx;
  text-align:right;
  font-size: 28rpx;
  color: #c8c8c8;
}
.sli-arrow{
  line-height:5rpx;
  margin-left:16rpx;
  text-align:right;
  font-size: 28rpx;
  color: #8d8d8d;
}
.sli-text{
  font-size:28rpx;
  color:#bdbdbd;
  border-bottom: 1rpx solid #bdbdbd;
  margin: 0 auto;
}
.sli-text-view{
  width: 100%;
  margin-top: 60rpx;
  text-align:center;
}
.flex-wrp{
  margin-top: 60rpx;
  display:flex;
}
.sli-btn-submit{
  color: #ffffff;
}
.btn-group{
  margin-top: 60rpx;
  width:95%;
  margin-left: auto;
  margin-right: auto;
  height: 100rpx;
}
.button-sp-area{
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.sli-btn-reset {
  font-size: 36rpx;
  color:#3A3A3A !important;
  border:1px solid #e6e6e6 !important;
  background-color:#ffffff !important;
  border-radius:10rpx !important;
  margin-top: 0;
  margin-bottom: 0;
}
.sli-btn-submit {
  font-size: 36rpx;
  color:#ffffff !important;
  border:0px solid #e6e6e6 !important;
  background-color:#00aaee !important;
  border-radius:10rpx !important;
  margin-top: 0;
  margin-bottom: 0;
}

.weui-cell::before{
  left:24rpx;
  right:24rpx;
}
.weui-cells::before{
  border-top:1rpx none #D9D9D9;
}
.img-phone{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  margin-top:2rpx;
}
.btn-phone{
  font-size: 24rpx;
  color: #00AAEE;
  margin:60rpx auto;
  text-align: center;
}
